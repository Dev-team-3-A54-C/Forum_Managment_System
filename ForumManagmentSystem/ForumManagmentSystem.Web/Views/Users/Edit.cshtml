@using ForumManagmentSystem.Core.ViewModels
@using ForumManagmentSystem.Infrastructure.Data.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Edit Profile";
}

@model EditProfileViewModel

<style>
	body {
		background-color: #f8f9fa;
	}

	.card {
		border: none;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

	.form-group label {
		font-weight: bold;
	}

	#userInput {
		padding: 10px;
		border: 1px solid #ccc;
		background-color: #f0f0f0;
		color: #999;
		cursor: not-allowed;
		pointer-events: none;
		user-select: none
	}

	#mainNav {
		box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
		background-color: #fff;
	}

		#mainNav .navbar-nav .nav-item .nav-link {
			color: black;
			padding: 0 1rem;
		}

		#mainNav .navbar-nav .nav-item:hover {
			background-color: rgba(0,0,0,0);
		}

		#mainNav .navbar-nav .nav-item .nav-link:hover {
			color: #f4623a;
		}
</style>

<section class="page-section">
	<h2 style="margin-left:50px; margin-bottom:30px;">Edit Profile</h2>
	<form asp-controller="Users" asp-action="Edit" method="post" style="max-width: 600px; margin-left:70px">
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="Username">Username</label>
			<input type="text" asp-for="Username" class="form-control" readonly id="userInput" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="Email">Email</label>
			<input type="text" asp-for="Email" class="form-control" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="FirstName">First Name</label>
			<input type="text" asp-for="FirstName" class="form-control" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="LastName">Last Name</label>
			<input type="text" asp-for="LastName" class="form-control" />
		</div>

		@if (ViewBag.currentUser != null && ((UserDb)ViewBag.currentUser).IsAdmin)
		{
			<div class="form-group" style="margin-top: 25px">
				<label asp-for="PhoneNumber">Phone Number</label>
				<input type="number" asp-for="PhoneNumber" class="form-control" />
			</div>
		}

		<div class="form-group" style="margin-top: 25px">
			<button type="submit" class="btn btn-primary">Update Profile</button>
		</div>
	</form>
</section>