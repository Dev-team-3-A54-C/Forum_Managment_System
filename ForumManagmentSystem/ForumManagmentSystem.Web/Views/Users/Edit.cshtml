@using ForumManagmentSystem.Core.ViewModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Edit Profile";
}

@model EditProfileViewModel

<style>
	body {
		background-color: #f8f9fa;
	}

	.card {
		border: none;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
	}

	.form-group label {
		font-weight: bold;
	}

	#userInput {
		padding: 10px;
		border: 1px solid #ccc;
		background-color: #f0f0f0;
		color: #999;
		cursor: not-allowed;
		pointer-events: none;
		user-select: none
	}
</style>

<section class="page-section">
	<h2 style="margin-left:50px; margin-bottom:30px;">Edit Profile</h2>
	<form asp-controller="Users" asp-action="Edit" method="post" style="max-width: 600px; margin-left:70px">
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="Username">Username</label>
			<input type="text" asp-for="Username" class="form-control" readonly id="userInput" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="Email">Email</label>
			<input type="text" asp-for="Email" class="form-control" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="FirstName">First Name</label>
			<input type="text" asp-for="FirstName" class="form-control" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<label asp-for="LastName">Last Name</label>
			<input type="text" asp-for="LastName" class="form-control" />
		</div>
		<div class="form-group" style="margin-top: 25px">
			<button type="submit" class="btn btn-primary">Update Profile</button>
		</div>
	</form>
</section>