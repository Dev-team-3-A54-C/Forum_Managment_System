@using ForumManagmentSystem.Core.ResponseDTOs
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Home";
}

<style>
    .custom-portfolio-box {
        display: block;
        position: relative;
        overflow: hidden;
    }

        .custom-portfolio-box img {
            width: 100%; /* Make the image fill the container */
            height: auto; /* Maintain aspect ratio */
        }

        .custom-portfolio-box .portfolio-box-caption {
            position: absolute;
            bottom: 0;
            width: 100%;
            text-align: center;
            background: rgba(244, 98, 58, 0.9); /* Orange background color */
            color: #fff; /* Text color */
            padding: 10px;
            box-sizing: border-box;
            opacity: 0; /* Hide initially */
            transition: opacity 0.3s;
        }

        .custom-portfolio-box:hover .portfolio-box-caption {
            opacity: 1; /* Show on hover */
        }

        .custom-portfolio-box .portfolio-box-caption .project-category,
        .custom-portfolio-box .portfolio-box-caption .project-name {
            font-family: "Merriweather Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
        }

        .custom-portfolio-box .portfolio-box-caption .project-category {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .custom-portfolio-box .portfolio-box-caption .project-name {
            font-size: 1.2rem;
        }

    #mainNav .navbar-nav .nav-item .nav-link.active {
        color: #f4623a;
    }

        #mainNav .navbar-nav .nav-item .nav-link.active:hover, #mainNav .navbar-nav .nav-item .nav-link:active {
            color: #db5834;
    }
</style>

<!-- Masthead-->
<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">Welcome to BG-Explorer Forum: Your Gateway to Bulgarian Adventures</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">Embark on a virtual journey through Bulgaria's wonders right here at BG-Explorer Forum! Our forum is your one-stop destination for sharing experiences, seeking travel tips, and connecting with fellow enthusiasts.</p>
                <a class="btn btn-primary btn-xl" href="#about">Find Out More</a>
            </div>
        </div>
    </div>
</header>
<!-- About-->
<section class="page-section bg-primary" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <p class="text-white-75 mb-4" style="font-size: 30px;">More Than @ViewBag.userCount People Are Using our Services And More Than @ViewBag.postCount Posts Have Been Created!</p>
                <hr class="divider divider-light" />
                <a class="btn btn-light btn-xl" asp-area="" asp-controller="Users" asp-action="Register">Get Started!</a>
            </div>
        </div>
    </div>
</section>
<!-- Services-->
<section class="page-section" id="services">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider" />
        <div class="row gx-4 gx-lg-5">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-gem fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Share, Explore, Connect</h3>
                    <p class="text-muted mb-0">Dive into Bulgaria's wonders! Share posts on cool spots, tips, folklore, and more.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-laptop fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Navigate Bulgaria</h3>
                    <p class="text-muted mb-0">Unlock Bulgaria's secrets! Share tips, tricks, and culture insights. Your go-to spot for navigating the beauty of Bulgaria.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-globe fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Explore Bulgaria's Essence</h3>
                    <p class="text-muted mb-0">Immerse yourself in Bulgaria's rich culture! Post about folklore, guides, and cultural gems.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-heart fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Roam, Share, Discover</h3>
                    <p class="text-muted mb-0">Roam freely through Bulgaria! Share posts on cool spots, interesting facts, and guides.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Portfolio-->
<div id="portfolio">
    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Belogradchik">
                    <img class="img-fluid" src="/Assets/Image1.png" alt="Belogradchik" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Belogradchik</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Koprivshtitsa">
                    <img class="img-fluid" src="/Assets/Image2.png" alt="Koprivshtitsa" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Koprivshtitsa</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Plovdiv">
                    <img class="img-fluid" src="/Assets/Image3.png" alt="Plovdiv" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Plovdiv</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Nesebar">
                    <img class="img-fluid" src="/Assets/Image4.png" alt="Nesebar" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Nesebar</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Rila Monastery">
                    <img class="img-fluid" src="/Assets/Image5.png" alt="Rila Monastery" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Rila Monastery</div>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-sm-6">
                <a asp-controller="Users" asp-action="Login" class="custom-portfolio-box" title="Seven Rila Lakes">
                    <img class="img-fluid" src="/Assets/Image6.png" alt="Seven Rila Lakes" />
                    <div class="portfolio-box-caption">
                        <div class="project-category text-white-50">Post</div>
                        <div class="project-name">Seven Rila Lakes</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Contact-->
<section class="page-section" id="contact">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
                <h2 class="mt-0">Top 10 Most Commented Posts of All Time:</h2>
                @foreach (var post in @ViewBag.topCommented as IList<PostResponseDTO>)
                {
                    <p>@post.Title</p>
                }
                    
                <hr class="divider" />
                <h2 class="mt-0">Top 10 Most Recent Posts of All Time:</h2>
                @foreach (var post in @ViewBag.topRecent as IList<PostResponseDTO>)
                {
                    <p>@post.Title</p>
                }
                
                @*<p class="text-muted mb-5">Ready to start your next project with us? Send us a messages and we will get back to you as soon as possible!</p> *@
            </div>
        </div>
        
        
    </div>
</section>
<!-- Call to action-->
<section class="page-section bg-dark text-white">
    <div class="container px-4 px-lg-5 text-center">
        <h2 class="mb-4">Sign Up and Start Exploring!</h2>
        <a class="btn btn-light btn-xl" asp-controller="Users" asp-action="Register">Sign Up Now!</a>
    </div>
</section>