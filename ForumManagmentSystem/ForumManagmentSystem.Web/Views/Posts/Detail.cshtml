@using ForumManagmentSystem.Core.ResponseDTOs
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Post - Details";
}

@model PostResponseDTO


<section class="page-section" style="margin-left: 160px; margin-right: 160px;">

    <h2 style="margin-bottom:30px;">@Model.Title</h2>

    <div class="container-fluid mt-100">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="media flex-wrap w-100 align-items-center">

                            <div class="media-body ml-3">
                                <a href="javascript:void(0)" data-abc="true"></a> <span>@Model.User (OP)</span>
                                <div class="text-muted small">@Model.CreatedOn.ToString("dd.MM.yyyy, HH:mm 'ч.'", new System.Globalization.CultureInfo("bg-BG"))</div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        @Model.Content
                    </div>
                    <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                        <div class="px-4 pt-3 d-flex align-items-center">

                            <span class="material-symbols-outlined" style="margin-right: 5px;">
                                thumb_up
                            </span>

                            <span class="ml-5">@Model.Likes</span>
                        </div>

                        <div class="px-4 pt-3">
                            <a type="button" class="btn btn-primary" href="#replayForm">
                                <i class="ion ion-md-create" ></i>Reply
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @if (Model.Replies.Count == 0)
    {
        <p>There are no replies</p>
    }
    else
    {
        foreach (var replay in Model.Replies)
        {
            <div class="container-fluid mt-100">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <div class="media flex-wrap w-100 align-items-center">

                                    <div class="media-body ml-3">
                                        <a href="javascript:void(0)" data-abc="true">@Model.CreatedBy</a> <span>(OP)</span>
                                        <div class="text-muted small">@Model.CreatedOn.ToString("dd.MM.yyyy, HH:mm 'ч.'", new System.Globalization.CultureInfo("bg-BG"))</div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @Model.Content
                            </div>
                            <div class="card-footer d-flex flex-wrap justify-content-between align-items-center px-0 pt-0 pb-3">
                                <div class="px-4 pt-3 d-flex align-items-center">

                                    <span class="material-symbols-outlined" style="margin-right: 5px;">
                                        thumb_up
                                    </span>

                                    <span class="ml-5">@Model.Likes</span>
                                </div>

                                <div class="px-4 pt-3">
                                    <button type="button" class="btn btn-primary">
                                        <i class="ion ion-md-create"></i>Reply
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }

    // TODO
    <form asp-controller="Posts" asp-action="Create" method="post" style="max-width: 600px; margin-left:70px" id="replayForm">

        <div class="form-group" style="margin-top: 25px">
            <label asp-for="Content">Replay</label>
            <textarea type="Content" asp-for="Content" class="form-control" style="width: 160%; height:300px"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin-top: 25px">
            <button type="submit" value="PostCreation" class="btn btn-primary">Createsds</button>
        </div>

    </form>

    
</section>